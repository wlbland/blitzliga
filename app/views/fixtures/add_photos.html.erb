<div class="container about-us">
      <%= simple_form_for(@fixture, url: add_path, html: { class: 'form-horizontal' }) do |f| %>
        <!-- check for previous photo adds -->
        <% unless @fixture.fixture_photos.empty? %>
          <h4>Warning: Some photos have already been added. Check you want to continue</h4>
        <% end %>
        <!-- the magic -->
        <p>The maximum upload size for a single image is 10MB.</p>
        <p>All Photos are added to the cloud so please be patient once you hit submit!</p>
        <%= f.fields_for :fixture_photos, @new_photo do |p| %>
          <%= p.file_field :photo, :multiple => true, name: "fixture_photos[photo][]" %>
        <% end %>
        <button type="button" class="btn btn-primary">
        <!-- <div class="actions button-primary"> -->
          <%= f.submit "Add Photos"%>
        <!-- </div> -->
        </button>
      <% end %>
</div>
