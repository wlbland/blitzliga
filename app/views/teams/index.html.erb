<h1>Listing teams</h1>

<%= link_to 'New team', new_team_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>

  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= link_to 'Show', team_path(team) %></td>
      <td><%= link_to "Edit", edit_team_path(team) %></td>
      <td><%= link_to "Delete", team_path(team),
              method: :delete,
              data: {confirm: 'Are you sure?'}  %></td>
    </tr>
  <% end %>
</table>
