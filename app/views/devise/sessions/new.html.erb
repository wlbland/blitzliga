<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Log in</h2>
        <div class="registration__social">
          <%= link_to user_facebook_omniauth_authorize_path, class: "registration__social-box registration__facebook" do %>
            <%= image_tag "facebook-logo.png", class: "registration__social-logo" %>
            <p class="registration__social--text"> Sign in with Facebook </p>
          <% end %>
        </div>
      <div class="registration__divide">
      <div class="registration__line"></div>
      <p class="registration__divide-text">or</p>
      <div class="registration__line"></div>
      </div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "example@gmail.com" %>
            <%= f.input :password, required: false, placeholder: "......" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary" %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

