  <li>
    <%= player.first_name %> <%= player.last_name %> <%= "- (Captain)" if player.captain %><%= "*" if player.registered && !player.captain %>
    <!-- This should show the date of the most recent change of a player's status. Currently, it shows when the player was created -->
     <%= "#{player.created_at.strftime("%B %Y")}" %>
     <%# <% if policy(player).update? %>
      <%#<%= link_to "Edit player", edit_player_path(@player) %>
     <%#<% end %>
     <% if policy(player).update? %>
       <% if player.registered? %>
          <%= form_for player, :html => {:class => 'form-inline'} do |f| %>
            <%= f.hidden_field :registered, value: false %>
            <%= f.submit 'Unregister' %>
          <% end %>
        <% else %>
          <%= form_for player do |f| %>
            <%= f.hidden_field :registered, value: true %>
            <%= f.submit 'Register' %>
          <% end %>
        <% end %>
      <% end %>
      <% if policy(player).update? %>
        <br>
      <% end %>
    <%#<%= link_to 'Delete Player', [player.team, player],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
  </li>
